<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.travel_journal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_travel"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_travel_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Travel_Journal">

        <activity android:name=".MainActivity"
            android:theme="@style/Theme.Travel_Journal"/>

        <activity android:name=".ui.home.AddTripActivity"
            android:theme="@style/Theme.Travel_Journal"/>

        <activity
            android:name=".ui.SplashScreen"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>